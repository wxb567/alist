{
  "builds": [
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public",
        "maxLambdaSize": "10mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "http://localhost:${PORT}"
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=1024"
    }
  }
}